    <script>
        // Adicionar interatividade
        document.addEventListener('DOMContentLoaded', function() {
            // Animar entrada dos elementos
            const components = document.querySelectorAll('rect, ellipse, circle');
            components.forEach((component, index) => {
                component.style.opacity = '0';
                component.style.transform = 'scale(0.8)';
                
                setTimeout(() => {
                    component.style.transition = 'all 0.5s ease-out';
                    component.style.opacity = '1';
                    component.style.transform = 'scale(1)';
                }, index * 50);
            });
            
            // Adicionar tooltips ao passar o mouse
            const services = [
                { selector: '#applications rect', info: 'Aplica√ß√µes executando em EKS Fargate com Blue/Green deployment' },
                { selector: '#aws-services rect', info: 'Servi√ßos AWS gerenciados com alta disponibilidade' },
                { selector: '#external-services rect', info: 'Servi√ßos externos integrados via API' }
            ];
            
            services.forEach(service => {
                document.querySelectorAll(service.selector).forEach(element => {
                    element.addEventListener('mouseenter', function(e) {
                        // Criar tooltip din√¢mico
                        const tooltip = document.createElement('div');
                        tooltip.style.position = 'absolute';
                        tooltip.style.background = '#2c3e50';
                        tooltip.style.color = 'white';
                        tooltip.style.padding = '8px 12px';
                        tooltip.style.borderRadius = '4px';
                        tooltip.style.fontSize = '12px';
                        tooltip.style.zIndex = '1000';
                        tooltip.style.maxWidth = '200px';
                        tooltip.textContent = service.info;
                        tooltip.id = 'svg-tooltip';
                        
                        document.body.appendChild(tooltip);
                        
                        // Posicionar pr√≥ximo ao cursor
                        const rect = e.target.getBoundingClientRect();
                        tooltip.style.left = (rect.left + rect.width / 2) + 'px';
                        tooltip.style.top = (rect.top - 40) + 'px';
                    });
                    
                    element.addEventListener('mouseleave', function() {
                        const tooltip = document.getElementById('svg-tooltip');
                        if (tooltip) {
                            tooltip.remove();
                        }
                    });
                    
                    // Adicionar efeito de hover
                    element.addEventListener('mouseenter', function() {
                        this.style.filter = 'brightness(1.1) drop-shadow(0 0 8px rgba(0,0,0,0.3))';
                        this.style.transform = 'scale(1.02)';
                        this.style.transition = 'all 0.2s ease';
                    });
                    
                    element.addEventListener('mouseleave', function() {
                        this.style.filter = 'none';
                        this.style.transform = 'scale(1)';
                    });
                });
            });
            
            // Atualizar m√©tricas em tempo real (simula√ß√£o)
            setInterval(() => {
                const latencyCard = document.querySelector('.metric-card:nth-child(2) .metric-value');
                const latencies = ['< 150ms', '< 180ms', '< 200ms', '< 165ms', '< 145ms'];
                latencyCard.textContent = latencies[Math.floor(Math.random() * latencies.length)];
            }, 5000);
        });
    </script>
